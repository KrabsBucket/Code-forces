{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build active file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "\"${file}\"",   // quotes fix the spaces in path
                "-o",
                "\"${fileDirname}/${fileBasenameNoExtension}.exe\"",
                "-static-libstdc++",
                "-static-libgcc"
            ],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
